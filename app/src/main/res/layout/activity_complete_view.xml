<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="64dp"
        android:layout_width="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/Back"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="onBackPressed()"
                android:text="Back"
                android:textColor="#FFFFFF"
                android:textsize="20sp"
                android:layout_width="64dp" />

            <TextView
                android:id="@+id/FacName"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="Id = FacNfffdssaggrefwsreagfdsgdgaegrame"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="10pt"
                android:layout_width="209dp" />

            <ImageButton
                android:id="@+id/Add"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_gravity="right"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/heart_uncheck" />
        </GridLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.example.sportsgo.sportsgo.Activities.CompleteView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/FacName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Facility Name"
                    android:textAlignment="center"
                    android:textSize="30sp" />
            </LinearLayout>

            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="258dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <TextView
                    android:id="@+id/Descript"
                    android:layout_width="215dp"
                    android:layout_height="270dp"
                    android:layout_column="12"
                    android:layout_row="0"
                    android:text="ID = Descript" />

                <LinearLayout
                    android:layout_width="166dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/Temperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ID = WeatherInfo" />

                    <TextView
                        android:id="@+id/PSI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ID = WeatherInfo" />

                    <TextView
                        android:id="@+id/weather_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ID = WeatherInfo" />

                </LinearLayout>

            </GridLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>