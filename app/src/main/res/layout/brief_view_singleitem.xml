<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <ImageView
        android:id="@+id/single_brief_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/facilty_image"
        android:layout_weight="0.07"
        android:background="@color/colorPrimary"
        android:padding="0.5dp"/>
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="left">
    <TextView
        android:id="@+id/single_brief_name"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_gravity="top|left"
        android:layout_height="wrap_content"
        android:text="Facility Name"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="8pt"
        />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/single_brief_distance"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="left|bottom"
            android:textColor="@color/colorPrimary"
            android:text="Facility Distance"
            android:textSize="6.5pt"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:orientation="vertical"
        android:layout_gravity="left">

        <ImageView
            android:id="@+id/single_brief_weather_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/sunny_icon" />
        <TextView
            android:id="@+id/single_brief_temperature"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="temp: 30 C"
            android:textSize="7pt"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/single_brief_psi"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="PSI: 90 Unhealthy"
            android:textSize="7pt"
            android:textStyle="bold"></TextView>

    </LinearLayout>


</GridLayout>